                                                                        <div>@Model.Area</div>
                                                                        <div>sq ft</div>
                                                                    </div>
                                                                </li>
                                                                <li class="d-flex flex-row align-items-center justify-content-start">
                                                                    <img src="~/images/icon_3_large.png" alt="">
                                                                    <div>
                                                                        <div>@Model.Baths</div>
                                                                        <div>baths</div>
                                                                    </div>
                                                                </li>
                                                                <li class="d-flex flex-row align-items-center justify-content-start">
